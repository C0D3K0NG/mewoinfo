{
  "manifest_version": 3,
  "name": "Mewoinfo - Purrfect PDF Facts",
  "version": "1.0",
  "description": "Upload a PDF and get meow-tastic facts delivered by a cat while you browse!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",          
    "unlimitedStorage", 
    "alarms",           
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"        
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"], 
      "js": ["scripts/content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "cat_gifs/*.gif", 
        "styles/content.css",
        "sounds/*.mp3" 
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}